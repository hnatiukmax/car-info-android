<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_bottom_navigation</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">3dp</item>
        <item name="itemHorizontalTranslationEnabled">false</item>

        <item name="itemBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="itemIconTint">@color/bottom_navigation_item_selector</item>
        <item name="itemTextColor">@color/bottom_navigation_item_selector</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

</resources>