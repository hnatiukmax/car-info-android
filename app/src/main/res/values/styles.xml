<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/main_background</item>

        <!-- Fonts -->
        <item name="fontFamily">@font/ff_avenir_next_rounded</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Theme for splash screen   -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
    </style>

    <style name="AppTheme.BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_bottom_navigation</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">3dp</item>
        <item name="itemHorizontalTranslationEnabled">false</item>

        <item name="itemBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="itemIconTint">@color/bottom_navigation_item_selector</item>
        <item name="itemTextColor">@color/bottom_navigation_item_selector</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Widget -->
    <style name="AppTheme.Button">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="AppTheme.Button.Filled">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/background_main_button</item>
    </style>

    <style name="AppTheme.Button.Outbox">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:background">@drawable/background_stroke_button</item>
    </style>

    <style name="AppTheme.TextButton">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="elevation">3dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

</resources>