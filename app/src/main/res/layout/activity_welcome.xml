<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sectumsempra.carinfo.presentation.pages.welcome.WelcomeActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="24dp"
        tools:context=".presentation.pages.welcome.WelcomeActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/welcome_find_information"
            android:textColor="#8C8C8C"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <TextView
            android:id="@+id/sign_in"
            style="@style/AppTheme.Button.Filled"
            android:layout_marginBottom="16dp"
            android:onClick="@{v -> viewModel.onSignInClick()}"
            android:text="@string/welcome_sign_in"
            app:layout_constraintBottom_toTopOf="@+id/sign_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sign_up"
            style="@style/AppTheme.Button.Outbox"
            android:layout_marginBottom="70dp"
            android:onClick="@{v -> viewModel.onSignUpClick()}"
            android:text="@string/welcome_sign_up"
            app:layout_constraintBottom_toTopOf="@+id/skip_for_now"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/skip_for_now"
            style="@style/AppTheme.TextButton"
            android:layout_marginTop="50dp"
            android:onClick="@{v -> viewModel.onSkipNowClick()}"
            android:text="@string/welcome_skip_for_now"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>